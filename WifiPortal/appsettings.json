{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "File": {
    "Path": "Logs/wifi-portal-{Date}.txt",
    "LogLevel": {
      "Default": "Information"
    },
    "FileSizeLimitBytes": 10485760, // 10MB
    "RetainedFileCountLimit": 5
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WifiPortal;Username=postgres;Password=postgres"
  },

  "Jwt": {
    "Issuer": "WifiPortal",
    "Audience": "WifiPortalUsers"
  }
}
