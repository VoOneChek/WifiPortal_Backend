{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "File": {
    "Path": "Logs/wifi-portal-{Date}.txt",
    "LogLevel": {
      "Default": "Information"
    },
    "FileSizeLimitBytes": 10485760, // 10MB
    "RetainedFileCountLimit": 5
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=host.docker.internal;Port=5432;Database=WifiPortal;Username=postgres;Password=postgres"
  }
}
